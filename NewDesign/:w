$(document).ready(function() {
    $("p.info").slideUp();
    $(".content h2").click(function() {
	$(this).find(">:first-child").toggleClass("selected")
	console.log($(this).next())
	if ($(this).find(">:first-child").hasClass("selected")) {
	    $(this).find(">:first-child").slideUp();
	}
	else {
	    $(this).find(">:first-child").slideDown();
	}
    });
});
